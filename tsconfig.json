{
  "compilerOptions": {
    "target": "es2024",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@appointments/*": ["src/modules/appointments/*"],
      "@posts/*": ["src/modules/posts/*"],
      "@shared/*": ["src/modules/shared/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
